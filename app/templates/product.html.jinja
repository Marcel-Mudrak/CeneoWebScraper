{% extends "base.html.jinja" %}
{% block content %}
    <div class="mb-3">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
          <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            <span class="fs-4">Ceneo Web Scraper</span>
          </a>

          <ul class="nav nav-pills">
            <li class="nav-item"><a href="{{url_for('index')}}" class="nav-link" aria-current="page">Home</a></li>
            <li class="nav-item"><a href="{{url_for('extract')}}" class="nav-link">Extract opinions</a></li>
            <li class="nav-item"><a href="{{url_for('products')}}" class="nav-link active">Products list</a></li>
            <li class="nav-item"><a href="{{url_for('author')}}" class="nav-link">About author</a></li>
          </ul>
        </header>
      </div>

    <h2>Product ID: {{product_id}}</h2>

    <ul class="list-group">
        <ul class="list-group fixed">
          <li class="list-group-item active opacity-60" aria-current="true">Statistics</li>
        </ul>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
        Number of opinions
        <span class="badge bg-warning rounded-pill">{{stats["opinions_count"]}}</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
        Number of opinions with pros
        <span class="badge bg-success rounded-pill">{{stats["pros_count"]}}</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
        Number of opinions with cons
        <span class="badge bg-danger rounded-pill">{{stats["cons_count"]}}</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
        Average score
        <span class="badge bg-info rounded-pill">{{stats["average_score"]}}</span>
        </li>
    </ul>      

    </br>

    <ul class="list-group fixed">
          <li class="list-group-item active opacity-60" aria-current="true">Plots</li>
    </ul>

    <div id="plots" class="content d-flex flex-wrap justify-content-center">

        <img src="{{ url_for('static', filename='plots/' + product_id + '_stars.png') }}" style="max-width:45%; max-height:45%;">

        <img src="{{ url_for('static', filename='plots/' + product_id + '_rcmd.png') }}" style="max-width:45%; max-height:45%;">

    </div>

{% endblock content %}